# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# ----- Common Variables -------------------------------------------------------

set $mod Mod4

set $w1 1:web
set $w2 2:term
set $w3 3:work
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w0 10


# ----- Visual Appearance ------------------------------------------------------

set $bar_bg     #303030
set $bar_status #CCCCCC

set $gray1  #646464
set $gray2  #494949
set $white  #FFFFCC
set $red    #BE2422
set $green  #228C4A
set $blue   #2267A5

# class                   border   backgr   text      indicator
client.focused		        $gray1   $gray1   $white    $blue
client.focused_inactive   $gray2   $gray2   $white    $gray2
client.unfocused          $gray2   $gray2   $white    $gray2

new_window pixel 3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font -*-terminus-*-*-*-*-*-*-*-*-*-*-*-*


# ---- Status Bar Setup --------------------------------------------------------

bar {
	position top
    status_command i3blocks -c ~/.i3/i3blocks.conf

  # Normal Font with Icon Fallback
	font pango:Terminess Powerline, Siji 10px
  strip_workspace_numbers yes

  separator_symbol " "


	colors {
		background $bar_bg
		statusline $bar_status

    #name              border  backgr  text
		focused_workspace  $bar_bg  $bar_bg  $white
		inactive_workspace $bar_bg  $bar_bg  #AAAAAA
	}
}


# ----- Startup Scripts --------------------------------------------------------

# Start Dropbox client
exec --no-startup-id dropbox start

# Start internet applet
exec --no-startup-id nm-applet

# Start password manager
exec --no-startup-id keepassx

# Start mpd
exec --no-startup-id mpd

# Disable trackpad
exec xinput disable 11

# Make icon fonts work
exec --no-startup-id xset +fp /home/fletcher/.fonts
exec --no-startup-id xset fp rehash

# Window compositing
exec compton

# Notifications
exec dunst -c ~/.config/dunst/dunstrc

# Show wallpaper
exec sh ~/.fehbg


# ----- Custom Keybindings -----------------------------------------------------

# Power Management
set $mode_system System: (l)ock, l(o)gout, (s)uspend, (h)ibernate, (r)eboot, (S)hutdown
mode "$mode_system" {
    bindsym l exec ~/.dotfiles/bin/i3exit lock, mode "default"
    bindsym e exec ~/.dotfiles/bin/i3exit logout, mode "default"
    bindsym s exec ~/.dotfiles/bin/i3exit suspend, mode "default"
    bindsym h exec ~/.dotfiles/bin/i3exit hibernate, mode "default"
    bindsym r exec ~/.dotfiles/bin/i3exit reboot, mode "default"
    bindsym Shift+s exec ~/.dotfiles/bin/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"

set $mode_display Display: (d)ock, (u)ndock
mode "$mode_display" {
    bindsym d exec ~/.screenlayout/docked.sh, mode "default"
    bindsym u exec ~/.screenlayout/undocked.sh, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+Escape mode "default"
}

bindsym $mod+Shift+Escape mode "$mode_display"


# Audio Control
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- unmute && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute        exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ unmute && pkill -RTMIN+10 i3blocks


# Window Switching
bindsym Mod1+Tab     exec quickswitch.py
bindsym $mod+Tab     workspace back_and_forth


# mpd
bindsym Ctrl+Right    exec mpc next && pkill -RTMIN+11 i3blocks
bindsym Ctrl+Left     exec mpc prev && pkill -RTMIN+11 i3blocks
bindsym Ctrl+Down     exec mpc toggle && pkill -RTMIN+11 i3blocks


# bindsym $mod+m       exec ~/.i3/scripts/mpc_control -j && pkill -RTMIN+11 i3blocks
# bindsym $mod+Shift+m exec ~/.i3/scripts/mpc_menu && pkill -RTMIN+11 i3blocks


# ----- Window Management Bindings ---------------------------------------------

# Move workspace to next monitor
bindsym $mod+x move workspace to output right

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse no

# toggle scratchpad
bindsym $mod+Shift+m move scratchpad
bindsym $mod+m scratchpad show

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
 bindsym $mod+d exec dmenu_run -i -l 10

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Right split h

# split in vertical orientation
bindsym $mod+Left split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+Up focus parent

# focus the child container
bindsym $mod+Down focus child

workspace_auto_back_and_forth yes

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w0

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Shift+h resize shrink width 2 px or 2 ppt
        bindsym Shift+j resize grow height 2 px or 2 ppt
        bindsym Shift+k resize shrink height 2 px or 2 ppt
        bindsym Shift+l resize grow width 2 px or 2 ppt


        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
